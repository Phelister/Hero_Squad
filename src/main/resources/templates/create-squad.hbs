<body>

 <!-- form details -->

    <section
      class="p-1 d-flex text-center align-items-center justify-content-center p-5 m-5"
    >
        <div class="d-sm-flex align-items-center justify-content-between">
          <div class="align-items-center ">
            <h3 class="text-center">Squad</h3>
            <p class="text-center">Fill in Squad details below:</p>

            <form method="post" action="/create-strength">

            <label for="name" class="form-label">Name:</label>
            <input type="text" class="form-control" id="name"  placeholder="name"/>
            <label for="maxSize">Max_Size:</label>
            <input  id="maxSize" name="maxSize" type="number" class="form-control" placeholder="max_size">


            <label for="cause" class="form-label">Cause:</label>
                        <select class="form-select" id="gender">
                          <option value="sexism" selected></option>
                          <option value="computer illiteracy">computer illiteracy</option>
                          <option value="covering mouth">covering mouth</option>
                          <option value="hogging bus seats">hogging bus seats</option>
                           <option value="saving the world">saving the world</option>
                            <option value="passive aggressive">passive aggressive</option>
                       </select>

            <div class="mb-4 text-center mt-3">
                <input  type="submit" class="btn btn-primary"  value="Add Strength">
            </div>

             </form>
          </div>

      </div>
    </section>

